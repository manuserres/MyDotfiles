# Alias para facilitar el uso de la terminal
alias save='super-save'

# FunciÃ³n para automatizar el backup de mis dotfiles
function super-save() {
    echo "Pushing changes to GitHub..."
    cd ~/mydotfiles
    git add .
    git commit -m "Auto-update: $(date +'%Y-%m-%d %H:%M:%S')"
    git push
    cd - > /dev/null
    echo "Everything is synced! ðŸš€"

  }
